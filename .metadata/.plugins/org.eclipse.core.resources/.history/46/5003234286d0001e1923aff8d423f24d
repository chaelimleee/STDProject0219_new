package com.javateam.SpringBootSecurityMyBatisThymeleaf.dao;

import java.util.List;

import org.apache.ibatis.annotations.Param;

import com.javateam.SpringBootSecurityMyBatisThymeleaf.domain.Role;
import com.javateam.SpringBootSecurityMyBatisThymeleaf.domain.Users;



/**
 * mapper
 * 
 * @author javateam
 *
 */
public interface UserMapper {
	
	Users getUserByUsername(String userName); //사용자 이름에 해당하는 사용자 정보를 가져옴
	List<Role> getUserRolesByUsername(String userName); //사용자 이름에 해당하는 사용자의 역할 정보를 가져옴
	
	int hasUsername(String username);//주어진 사용자 이름이 데이터베이스에 존재하는지 확인
	
	// Users loadUserByUsername(String userName);
	void insertUser(@Param("users") Users users); //사용자 정보를 데이터베이스에 삽입하는 메서드입니다.
	void insertUserRoles(@Param("username") String username, 
						 @Param("role") String role);

}